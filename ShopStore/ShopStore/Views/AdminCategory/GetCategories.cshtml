@using Entities.Concrete
@model List<Category> 
<div class="col-xl-3 col-lg-4 col-md-4 col-sm-12 col-12">
	<div class="product-sidebar">
		<div class="product-sidebar-widget">
			<h4 class="mb-0">Filtreleme</h4>
		</div>
		<div class="product-sidebar-widget">
			<h4 class="product-sidebar-widget-title">Kategori</h4>
			<ul class="list-group">
				@foreach(var category in Model)
				{
					<li class="list-group-bordered" style="list-style:none">
						<a href="/AdminProduct/Index/@category.CategoryId">@category.CategoryName</a>
					</li>
				}
			</ul>
		</div>
		<div class="product-sidebar-widget">
			<a href="/AdminProduct/Index" class="btn btn-outline-light">Tüm Kategoriler</a>
		</div>
	</div>
</div>
