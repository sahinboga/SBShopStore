@model Entities.Concrete.Member
@{
	Layout = null;
}

<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Kayıt Ol</title>
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="~/Content/Tema/Shop/assets/vendor/bootstrap/css/bootstrap.min.css">
	<link href="~/Content/Tema/Shop/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
	<link rel="stylesheet" href="~/Content/Tema/Shop/assets/libs/css/style.css">
	<link rel="stylesheet" href="~/Content/Tema/Shop/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
	<style>
		html,
		body {
			height: 100%;
		}

		body {
			display: -ms-flexbox;
			display: flex;
			-ms-flex-align: center;
			align-items: center;
			padding-top: 40px;
			padding-bottom: 40px;
		}
	</style>
</head>

<body>
	<div class="splash-container">
		<div class="card ">
			<div class="card-header text-center"><img class="logo-img" src="~/Content/Tema/Shop/assets/images/logo.png" alt="logo"><span class="splash-description">Lütfen kayıt olmak için bilgilerinizi giriniz.</span></div>
			<div class="card-body">
				@using (Html.BeginForm("MemberRegister", "Member", FormMethod.Post))
				{
					<div class="form-group">
						<input class="form-control form-control-lg" name="FirstName" type="text" placeholder="Adınız">
					</div>
					<div class="form-group">
						<input class="form-control form-control-lg" name="LastName" type="text" placeholder="Soyadınız">
					</div>
					<div class="form-group ">
						<input class="form-control form-control-lg" name="Email" id="username" type="text" placeholder="Email" autocomplete="off">
					</div>
					<div class="form-group">
						<input class="form-control form-control-lg" name="Password" id="password" type="password" placeholder="Şifreniz">
					</div>
					<div class="form-group">
						<input class="form-control form-control-lg" name="Phone" id="phone" type="text" placeholder="Telefon">
					</div>
					<div class="form-group">
						<textarea class="form-control form-control-lg" name="Adress" id="adress" type="text" placeholder="Adres"></textarea>
					</div>
					<div class="form-group">
						<label class="custom-control custom-checkbox">
							<input class="custom-control-input" type="checkbox"><span class="custom-control-label">Beni Hatırla</span>
						</label>
					</div>
					<button type="submit" class="btn btn-primary btn-lg btn-block">Kayıt Ol</button>
				}
			</div>
			<div class="card-footer bg-white p-0  ">
				<div class="card-footer-item card-footer-item-bordered text-center">
					<a href="/Login/MemberLogin/" class="footer-link">Hesabınız Var mı? Giriş Yapınız</a>
				</div>
			</div>
		</div>
	</div>
	<script src="~/Content/Tema/Shop/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
	<script src="~/Content/Tema/Shop/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
</body>

</html>
