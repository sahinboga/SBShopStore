
@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="w-50 m-auto">
	<div class="card text-center my-5">
		<div class="card-body">
			<h3>Toplam Tutar</h3>
			<h4 class="text-danger">$@ViewBag.CardAmount</h4>
		</div>

	</div>
	@using (Html.BeginForm("Pay", "Payment", FormMethod.Post))
	{

		<div class="form-group">
			<input name="cardName" type="text" class="form-control"
				   placeholder="Kart Sahibi" />
		</div>
		<div class="form-group">
			<input name="cardNumber" type="text" class="form-control"
				   placeholder="Kart Numarası">
		</div>
		<div class="cart-month-year form-group d-flex justify-content-between">
			<select name="month" class="form-control form-select">
				@for (int i = 1; i <= 12; i++)
				{

				<option>@i</option>
				}
			</select>
			<select name="year" class="form-control form-select">
				@for (int i = 2022; i <= 2030; i++)
				{
				<option>@i</option>

				}
			</select>
		</div>
		<div class="form-group">
			<input name="cvv" type="text" class="form-control" placeholder="CVV" />
		</div>
		<button class="btn w-100 btn-success" (click)="Pay2()">Ödemeyi Tamamla</button>
	}
</div>