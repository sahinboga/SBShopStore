
@{
	Layout = null;
}

<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="~/Content/Tema/Shop/assets/vendor/bootstrap/css/bootstrap.min.css">
	<link href="~/Content/Tema/Shop/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
	<link rel="stylesheet" href="~/Content/Tema/Shop/assets/libs/css/style.css">
	<link rel="stylesheet" href="~/Content/Tema/Shop/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
	<link rel="stylesheet" href="~/Content/Tema/Shop/assets/vendor/charts/chartist-bundle/chartist.css">
	<link rel="stylesheet" href="~/Content/Tema/Shop/assets/vendor/charts/morris-bundle/morris.css">
	<link rel="stylesheet" href="~/Content/Tema/Shop/assets/vendor/fonts/material-design-iconic-font/css/materialdesignicons.min.css">
	<link rel="stylesheet" href="~/Content/Tema/Shop/assets/vendor/charts/c3charts/c3.css">
	<link rel="stylesheet" href="~/Content/Tema/Shop/assets/vendor/fonts/flag-icon-css/flag-icon.min.css">
	<!-- jquery 3.3.1 -->
	<script src="~/Content/Tema/Shop/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
	<title>Concept - Bootstrap 4 Admin Dashboard Template</title>
	<style>
		.field-validation-error{
			color:red;
		}
	</style>
</head>

<body>
	<!-- ============================================================== -->
	<!-- main wrapper -->
	<!-- ============================================================== -->
	<div class="dashboard-main-wrapper">
		<!-- ============================================================== -->
		<!-- navbar -->
		<!-- ============================================================== -->
		<div class="dashboard-header">
			<nav class="navbar navbar-expand-lg bg-white fixed-top">
				<a class="navbar-brand" href="index.html">ShopStore</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse " id="navbarSupportedContent">
					<ul class="navbar-nav ml-auto navbar-right-top">
						<li class="nav-item dropdown nav-user">
							<a class="nav-link nav-user-img" href="#" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="~/Content/Tema/Shop/assets/images/avatar-1.jpg" alt="" class="user-avatar-md rounded-circle"></a>
							<div class="dropdown-menu dropdown-menu-right nav-user-dropdown" aria-labelledby="navbarDropdownMenuLink2">
								<div class="nav-user-info">
									<h5 class="mb-0 text-white nav-user-name">Şahin Boğa</h5>
								</div>
								<a class="dropdown-item" href="/Login/AdminLogOut"><i class="fas fa-power-off mr-2"></i>Çıkış Yap</a>
							</div>
						</li>
					</ul>
				</div>
			</nav>
		</div>
		<div class="nav-left-sidebar sidebar-dark">
			<div class="menu-list">
				<nav class="navbar navbar-expand-lg navbar-light">
					<a class="d-xl-none d-lg-none" href="#">Dashboard</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav flex-column">
							<li class="nav-divider">
								Şahin Boğa
							</li>
							<li class="nav-item ">
								<a class="nav-link" href="/AdminCategory/Index"><i class="fas fa-list-ul"></i>Kategoriler</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#" data-toggle="collapse" aria-expanded="false" data-target="#submenu-2" ><i class="fas fa-clipboard-list"></i>Ürünler</a>
								<div id="submenu-2" class="collapse submenu" style="">
									<ul class="nav flex-column">
										<li class="nav-item">
											<a class="nav-link" href="/AdminProduct/Index">Ürün Listesi<span class="badge badge-secondary">New</span></a>
										</li>
										<li class="nav-item">
											<a class="nav-link" href="/AdminProduct/AddProduct">Ürün ekle<span class="badge badge-secondary">New</span></a>
										</li>

									</ul>
								</div>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#" ><i class="fas fa-fw fa-chart-pie"></i>Chart</a>
							</li>
						</ul>
					</div>
				</nav>
			</div>
		</div>
		<div class="dashboard-wrapper">
			<div class="dashboard-ecommerce">
				<div class="container-fluid dashboard-content ">
					<div class="ecommerce-widget">
						@RenderBody()
					</div>
				</div>
			</div>
			<!-- ============================================================== -->
			<!-- footer -->
			<!-- ============================================================== -->
			<!-- ============================================================== -->
			<!-- end footer -->
			<!-- ============================================================== -->
		</div>
		<!-- ============================================================== -->
		<!-- end wrapper  -->
		<!-- ============================================================== -->
	</div>
	<!-- ============================================================== -->
	<!-- end main wrapper  -->
	<!-- ============================================================== -->
	<!-- Optional JavaScript -->
	<!-- bootstap bundle js -->
	<script src="~/Content/Tema/Shop/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
	<!-- slimscroll js -->
	<script src="~/Content/Tema/Shop/assets/vendor/slimscroll/jquery.slimscroll.js"></script>
	<!-- main js -->
	<script src="~/Content/Tema/Shop/assets/libs/js/main-js.js"></script>
	<!-- chart chartist js -->
	<script src="~/Content/Tema/Shop/assets/vendor/charts/chartist-bundle/chartist.min.js"></script>
	<!-- sparkline js -->
	<script src="~/Content/Tema/Shop/assets/vendor/charts/sparkline/jquery.sparkline.js"></script>
	<!-- morris js -->
	<script src="~/Content/Tema/Shop/assets/vendor/charts/morris-bundle/raphael.min.js"></script>
	<script src="~/Content/Tema/Shop/assets/vendor/charts/morris-bundle/morris.js"></script>
	<!-- chart c3 js -->
	<script src="~/Content/Tema/Shop/assets/vendor/charts/c3charts/c3.min.js"></script>
	<script src="~/Content/Tema/Shop/assets/vendor/charts/c3charts/d3-5.4.0.min.js"></script>
	<script src="~/Content/Tema/Shop/assets/vendor/charts/c3charts/C3chartjs.js"></script>
	<script src="~/Content/Tema/Shop/assets/libs/js/dashboard-ecommerce.js"></script>
</body>

</html>

